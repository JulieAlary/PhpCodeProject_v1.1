{% extends "CMSCoreBundle::layout.html.twig" %}

{% block title %}
    Page d'accueil - {{ parent() }}
{% endblock %}

{% block body %}

    {#On affiche tous les messages flash dont le nom est « info » #}
    {% for message in app.session.flashbag.get('info') %}
        <div class="alert alert-info">Message flash : {{ message }}</div>
    {% endfor %}

    {{ render(controller('CMSBlogBundle:Carousel:isPublished')) }}

    <h3 class="text-center">Actus</h3>
    <hr class="{% if custom is defined %}{% for key, theme in custom %}{{ theme.theme }}_hr{% endfor %}{% endif %}">


    <div class="container">
        {{ render(controller("CMSBlogBundle:Article:menu", {'limit': 4})) }}
    </div>

{% endblock %}

