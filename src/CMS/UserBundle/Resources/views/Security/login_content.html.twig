{% trans_default_domain 'FOSUserBundle' %}

{% block body %}
    <h1>Bonjour</h1>

    {% trans_default_domain 'FOSUserBundle' %}

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="form-group col-md-6 col-md-offset-3 well col-xs-6 col-xs-offset-3">
        <form action="{{ path("fos_user_security_check") }}" method="post">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
            {% endif %}

            <label for="username">{{ 'security.login.username'|trans }}</label>
            <div class="input-group">
                <span class="input-group-addon" style="background-color: lightskyblue;"><i class="fa fa-user" aria-hidden="true"></i></span>
                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required"
                       class="form-control"/>
            </div>

            <label for="password">{{ 'security.login.password'|trans }}</label>
            <div class="input-group">
                 <span class="input-group-addon" style="background-color: lightskyblue;"><i class="fa fa-unlock-alt" aria-hidden="true"></i>
</span>
                <input type="password" id="password" name="_password" required="required" class="form-control"/>
            </div>

            <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
            <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>

            <br><br>

            <button type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}"
                    class="btn btn-primary">Se Connecter
            </button>
        </form>
    </div>
{% endblock %}