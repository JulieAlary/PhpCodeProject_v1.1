{% extends "CMSBlogBundle::layout.html.twig" %}

{% block title %}
    Supprimer la page de contact existante - {{ parent() }}
{% endblock %}

{% block cms_body %}

    <h2>Supprimer une page de contact</h2>

    <p class="alert alert-warning">
        Etes-vous certain de vouloir supprimer la page de contact "{{ pageContact.name }}" ?
    </p>

    {# On met l'id de l'annonce dans la route de l'action du formulaire #}
    <form action="{{ path('cms_contact_page_fa_delete', {'id': pageContact.id}) }}" method="post">
        <a href="{{ path('cms_contact_index') }}" class="btn btn-success btn-sm">
            <i class="glyphicon glyphicon-chevron-left"></i>
            Retour à la rubrique
        </a>
        {# Ici j'ai écrit le bouton de soumission à la main #}
        <button type="submit" class="btn btn-danger btn-sm"><i class="fa fa-trash-o" aria-hidden="true"></i>&nbsp;&nbsp;Supprimer
        </button>
        {# Ceci va générer le champ CSRF #}
        {{ form_rest(form) }}
    </form>

{% endblock %}