{% extends "CMSBlogBundle::layout.html.twig" %}

{% block title %}
    Accueil - {{ parent() }}
{% endblock %}

{% block cms_body %}

    <h2>Liste des articles</h2>
    <div class="row">
        <ul>
            {% for article in listArticles %}
                {% if article.published == true %}
                    <div class="col-md-4">
                        <a href="{{ path('cms_blog_fiche', {'id': article.id}) }}">
                            <div class="thumbnail">

                                {% if article.image is not null %}
                                    <img
                                            src="{{ asset(article.image.uploadDir ~ '/' ~ article.image.id ~ '.' ~ article.image.url) }}"
                                            alt="{{ article.image.alt }}"
                                    />
                                {% endif %}
                                <div class="caption">
                                    <h3>{{ article.title|capitalize }}</h3>
                                    <p> Par {{ article.author|capitalize }},</p>
                                    <p> Le {{ article.date|date('d/m/Y') }}</p>
                                </div>
                            </div>


                        </a>


                    </div>
                {% endif %}
            {% else %}
                <li>Pas (encore !) d'articles</li>

            {% endfor %}
        </ul>
    </div>
    <div class="row">
        <ul class="pagination">
            {# On utilise la fonction range(a, b) qui cr√©e un tableau de valeurs entre a et b #}
            {% for p in range(1, nbPages) %}
                <li{% if p == page %} class="active"{% endif %}>
                    <a href="{{ path('cms_blog_home', {'page': p}) }}">{{ p }}</a>
                </li>
            {% endfor %}

        </ul>
    </div>
{% endblock %}