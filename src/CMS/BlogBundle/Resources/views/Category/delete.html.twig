{% extends "CMSBlogBundle::layout.html.twig" %}

{% block title %}
    Supprimer une catégorie - {{ parent() }}
{% endblock %}

{% block cms_body %}

    <h2>Supprimer une catégorie</h2>

    <p>
        Etes-vous certain de vouloir supprimer la catégorie "{{ category.name }}" ?
    </p>

    <form action="{{ path('cms_category_delete', {'id': category.id}) }}" method="post">
        <a href="{{ path('cms_category_list', {'id': category.id}) }}" class="btn btn-success">
            <i class="glyphicon glyphicon-chevron-left"></i>
            Retour à l'article
        </a>
        {# Ici j'ai écrit le bouton de soumission à la main #}
        <input type="submit" value="Supprimer" class="btn btn-danger"/>
        {# Ceci va générer le champ CSRF #}
        {{ form_rest(form) }}
    </form>

{% endblock %}