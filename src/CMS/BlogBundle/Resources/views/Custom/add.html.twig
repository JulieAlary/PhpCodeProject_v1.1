{% extends "CMSBlogBundle::layout.html.twig" %}

{% block title %}
    Nom de votre blog - {{ parent() }}
{% endblock %}

{% block cms_body %}

    <h2>Configurer votre blog</h2>

    <div class="row">
        <div class="flip">
            <h3>
                <button class="btn btn-info pull-right"><i class="fa fa-info" aria-hidden="true"></i>&nbsp;&nbsp;Aide
                </button>
            </h3>
        </div>

        <div class="panel-flip">
            <p class="bg-info">Vous pourrez biensur le modifier plus tard, mais ce n'est pas très conseillée pour vos
                lecteurs, alors pensez-le bien</p>
        </div>

    </div>

    <br>

    {{ include("CMSBlogBundle:Custom:form.html.twig") }}

{% endblock %}

{% block javascripts %}{{ parent() }}
    {# Utilisation du select2 pour affichage des couleur dans le form#}
    <script type="text/javascript">

        $(document).ready(function () {
            /* To display Font Awezome colorized in ChoiceType */
            function formatState(state) {
                if (!state.id) {
                    return state.text;
                }
                var $state = $(
                    '<span><i class="fa fa-circle' + ' ' + state.element.value.toLowerCase() + '"> ' + state.text + '</i></span>'
                );
                return $state;
            }

            /* Initializing select-2 */
            $('select').select2({
                /*To hide the search module*/
                minimumResultsForSearch: Infinity,
                /*To display function on top : named formatstate*/
                templateResult: formatState

            });

        });


    </script>
{% endblock %}

